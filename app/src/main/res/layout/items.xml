<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    >



    <TextView
        android:id="@+id/itemNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        tools:text="name of the item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/itemPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        tools:text="price of the item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemNameTv"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/whereToBuyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="where to buy"
        android:padding="5dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/itemPriceTv"
        app:layout_constraintTop_toBottomOf="@id/itemPriceTv"
        app:layout_constraintStart_toStartOf="@id/itemPriceTv"/>



</androidx.constraintlayout.widget.ConstraintLayout>